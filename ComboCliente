    private void ComboSerItemStateChanged(java.awt.event.ItemEvent evt) {                                          
        
        int servidor = ComboSer.getSelectedIndex();
        
        switch(servidor){
            
            case 1:
                JOptionPane.showMessageDialog(null, "Estas conectado a SQL");
                SQL obj = new SQL();
                obj.setVisible(true);
            break;
            case 2:
                JOptionPane.showMessageDialog(null, "Estas conectado a MySQL");
                MySQL objt = new MySQL();
                objt.setVisible(true);
                break;
            case 3:
                JOptionPane.showMessageDialog(null, "Estas conectado a Posgres");
                Posgres objt1 = new Posgres();
                objt1.setVisible(true);
                break;
            
        }
 
 
    }                                         

